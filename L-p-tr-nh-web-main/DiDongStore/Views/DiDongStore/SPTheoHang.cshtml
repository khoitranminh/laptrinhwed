
@{
    ViewBag.Title = "SPTheoHang";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h2>Sản Phẩm Theo Hãng</h2>
@foreach (var item in Model)
{
    <div class="col-sm-4 col-lg-4 col-md-4">
        <div class="thumbnail">
            <a href="@Url.Action("Chitietphone", "DiDongStore", new { id = item.MaDienThoai })">
                <img src="~/images/@item.AnhBia" alt="@item.TenDienThoai" width="100">
                <div class="caption">
                    <h4>
                        <a href="#">@item.TenDienThoai</a>
                    </h4>
                    <h4 class="pull-right">@item.GiaBan</h4>
                </div>
            </a>
            <div class="ratings">
                <p class="pull-right">15 reviews</p>
                <p>
                    <span class="glyphicon glyphicon-star"></span>
                    <span class="glyphicon glyphicon-star"></span>
                    <span class="glyphicon glyphicon-star"></span>
                    <span class="glyphicon glyphicon-star"></span>
                    <span class="glyphicon glyphicon-star"></span>
                </p>
            </div>
        </div>
    </div>
}

